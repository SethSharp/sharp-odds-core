{
    "name": "sethsharp/sharp-odds-core",
    "description": "Shared functionality for Sharp Odds ecosystem",
    "type": "library",
    "homepage": "https://github.com/SethSharp/sharp-odds-core",
    "autoload": {
        "psr-4": {
            "SethSharp\\SharpOddsCore\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Seth Sharp",
            "email": "seth@sharp-odds.com.au"
        }
    ],
    "require": {
        "php": "^8.3",
        "sethsharp/odds-api": "^1.0",
        "laravel/framework": "^11.9",
        "spatie/enum": "^3.13",
        "spatie/laravel-data": "^4.7",
        "spatie/laravel-query-builder": "^6.0",
        "spatie/laravel-typescript-transformer": "^2.4",
        "spatie/typescript-transformer": "^2.3"
    },
    "extra": {
        "laravel": {
            "providers": [
                "SethSharp\\SharpOdds\\CoreServiceProvider"
            ]
        }
    },
    "config": {
        "platform": {
            "php": "8.3"
        },
        "platform-check": false
    }
}
